{
  "name": "restart-language-server",
  "publisher": "okwang",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "0.0.12",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/latel/restart-language-server.git"
  },
  "icon": "icon.png",
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "vscode": "^1.76.0",
    "node": ">=24.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "restart-language-server.enable": {
          "type": "boolean",
          "default": true,
          "description": "%config.enable.description%"
        },
        "restart-language-server.debug": {
          "type": "boolean",
          "default": false,
          "description": "%config.debug.description%"
        },
        "restart-language-server.includes": {
          "type": "array",
          "default": [
            "package.json",
            "package-lock.json",
            "pnpm-lock.yaml"
          ],
          "description": "%config.includes.description%",
          "items": {
            "type": "string"
          }
        },
        "restart-language-server.lsRestartCommands": {
          "type": "array",
          "default": [
            "typescript.restartTsServer"
          ],
          "description": "%config.lsRestartCommands.description%",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
